<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Gradient Overlay -->

    <!-- Charify Logo (Top Image) -->

    <!-- Charify Word Logo -->

    <!-- Welcome Text -->

    <View
        android:id="@+id/gradient_overlay"
        android:layout_width="407dp"
        android:layout_height="726dp"
        android:background="@drawable/gradient_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/charify_logo"
        android:layout_width="92dp"
        android:layout_height="90dp"
        android:layout_marginTop="44dp"
        android:contentDescription="Charify Logo"
        android:elevation="4dp"
        android:src="@drawable/charify_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="0dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/charify_word"
        android:layout_width="232dp"
        android:layout_height="104dp"
        android:layout_marginTop="-22dp"
        android:contentDescription="Charify Word Logo"
        android:elevation="0dp"
        android:src="@drawable/charify_word"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="0dp"
        app:layout_constraintTop_toBottomOf="@id/charify_logo" />

    <!-- Log In Button -->

    <!-- Create an Account Button -->

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="200dp"
        android:layout_height="61dp"
        android:layout_marginTop="4dp"
        android:elevation="4dp"
        android:fontFamily="@font/nats"
        android:gravity="center"
        android:text="WELCOME"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/charify_word" />

    <Button
        android:id="@+id/log_in_button"
        android:layout_width="284dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#5CCE61"
        android:fontFamily="@font/nats"
        android:text="LOGIN"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome_text"
        app:layout_constraintVertical_bias="0.678" />

    <Button
        android:id="@+id/create_account_button"
        android:layout_width="284dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#5CCE61"
        android:fontFamily="@font/nats"
        android:text="CREATE AN ACCOUNT"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/log_in_button"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>